/* pages/home/home.wxss */
/* 设置容器的样式 */
.container {
    position: relative; /* 父元素设置为相对定位 */
    width: 100%;
    height: 100vh; /* 视口高度 */
  }
  /* 调整图片的位置 */
  .adjusted-image {
    position: absolute; /* 子元素设置为绝对定位 */
    top: 20px; /* 向下移动50px */
    left: 20px; /* 向右移动50px */
    width: 50px; /* 图片宽度 */
    height: 50px; /* 图片高度 */
  }
  .adjusted-grid{
    top: 100px; /* 向下移动50px */
    width: 350px; /* 图片宽度 */
    height: 100px; /* 图片高度 */

  }
  .adjusted-list {
    position: absolute; /* 子元素设置为绝对定位 */
    top: 180px; /* 向下移动50px */
    left: 20px; /* 向右移动50px */
    width: 350px; /* 图片宽度 */
    height: 50px; /* 图片高度 */
  }
  